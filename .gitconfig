[user]
    name = vsokh
    email = vsokolohorskyi@gmail.com
[core]
    pager = diff-so-fancy | less --tabs=4 -RFX
    editor = vim
[color]
    ui = true
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[color "diff"]
    meta = 11
    frag = magenta bold
    commit = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse
[diff-so-fancy]
    markEmptyLines = false
    changeHunkIndicators = true
    rulerWidth = 80
[alias]
    ch = checkout
    pl = pull
    ph = push
    me = merge
    st = status
    br = branch
    co = commit
    d = diff
    sl =  shortlog
    lo = log --oneline
    graph = log --graph --all --decorate --oneline
